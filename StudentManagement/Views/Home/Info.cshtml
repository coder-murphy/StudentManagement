        <div class="card-header">
            <div class="card-title">@Model.Name</div>
        </div>
        <img class="card-img-top" src="~/imgs/usersmall.jpg" width="200" height="200" asp-append-version="true"/>
        <div class="card-body text-center">
            <h5 class="card-title">主修科目：@Model.Major.Value.ToString()</h5>
        </div>
        <div class="card-footer text-center">
            <a href="/home/info/@Model.Id" class="btn btn-primary m-1">查看</a>
            <a href="#" class="btn btn-primary m-1">编辑</a>
            <a href="#" class="btn btn-danger m-1">删除</a>
        </div>
    </div>
